<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/last_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rectangle_corners"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/input_acces_code_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/input_access_code_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/under_line"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/access_code"
            android:inputType="textPersonName"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/under_line"
        android:layout_marginBottom="16dp"
        android:background="@color/under_line" />
    <TextView
        android:id="@+id/input_access_code_bot_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:text="@string/we_send_you_code"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/input_access_code_bot_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:text="@string/dont_have_code"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp" />
</LinearLayout>