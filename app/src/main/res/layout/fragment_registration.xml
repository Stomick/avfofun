<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/last_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rectangle_corners"
        android:orientation="vertical">

        <TextView
            android:id="@+id/registration_gender_titleView"
            style="@style/AppTheme.TitleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="@string/you_gender"
            android:paddingStart="16dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="24dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp">

            <RadioButton
                android:id="@+id/registration_rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/male"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/registration_rb_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="@string/female"
                android:textSize="16sp" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/under_line"
        android:background="@color/under_line" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rectangle_corners"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/registration_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/input_first_name"
            android:inputType="textCapWords|textPersonName" />

        <EditText
            android:id="@+id/registration_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/input_last_name"
            android:inputType="textCapWords|textPersonName" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/under_line"
        android:background="@color/under_line" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rectangle_corners"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/registration_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/input_city"
            android:inputType="textCapWords|textPersonName"
            android:singleLine="true"
            android:textColor="?attr/editTextColor"
            android:textSize="18sp"
            tools:ignore="TextViewEdits" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/under_line" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/under_line"
        android:background="@color/under_line" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rectangle_corners"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/registration_birth_date_titleView"
            style="@style/AppTheme.TitleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/birth_date" />

        <TextView
            android:id="@+id/registration_birth_date_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/editTextBackground"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/date_template_field"
            android:textColor="?attr/editTextColor"
            tools:ignore="TextViewEdits"
            android:drawableEnd="@drawable/ic_arrow_drop_down" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/under_line"
        android:background="@color/under_line" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>