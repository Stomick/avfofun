<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    tools:context="com.team.noty.event.ui.activities.RegistrationPrewActivity">

    <com.pixplicity.multiviewpager.MultiViewPager
        android:id="@+id/reg_prew_counter"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:clipToPadding="false"
        app:matchChildWidth="@id/counter_item" />

    <com.pixplicity.multiviewpager.MultiViewPager
        android:id="@+id/reg_prew_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal" />
</LinearLayout>

