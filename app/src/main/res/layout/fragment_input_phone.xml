<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/last_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rectangle_corners"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/input_phone_country"
                style="@style/AppTheme.Field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="TextViewEdits"
                android:layout_marginEnd="3dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="-3dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_arrow_drop_down" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/under_line"
            android:layout_marginRight="3dp"
            android:background="@color/under_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/input_phone_index"
                style="@style/AppTheme.Field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/under_line"
                android:editable="false"
                android:inputType="textPersonName"
                android:text="+7"
                tools:ignore="TextViewEdits" />

            <EditText
                android:id="@+id/input_phone_number"
                style="@style/AppTheme.Field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/under_line"
                android:digits="0123456789"
                android:ems="10"
                android:inputType="textPersonName|phone"
                android:maxLength="12"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/under_line"
        android:background="@color/under_line" />
    <TextView
        android:id="@+id/phone_bot_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/phone_bot_title"
        android:textColor="@android:color/black" />

</LinearLayout>