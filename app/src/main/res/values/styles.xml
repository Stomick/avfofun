<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowTitleStyle">@style/MyAlertDialogTitle</item>
        <item name="android:textColor">@color/small_title_text</item>
        <item name="android:textColorPrimary">@color/small_title_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyAlertDialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.WithOutBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BigButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">5dp</item>
    </style>

    <style name="AppTheme.BigButton.BG" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_big_text_color</item>
        <item name="android:elevation" tools:targetApi="lollipop">5dp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>
    <style name="AppTheme.StepRegTitle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="AppTheme.TitleSmall" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/small_title_text</item>
    </style>
    <style name="AppTheme.Title" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="AppTheme.Field" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/under_line</item>
    </style>
    <style name="AppTheme.Field.Selectable" parent="AppTheme.Field">
        <item name="android:drawableRight">@drawable/ic_arrow_drop_down</item>
    </style>
    <style name="AppTheme.HorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>
    <style name="AppTheme.TitleField" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/small_title_text</item>
    </style>
    <style name="AppTheme.ProgressBar" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/ic_thumb</item>
        <item name="android:progressDrawable">@drawable/seek_bar</item>
    </style>
</resources>
